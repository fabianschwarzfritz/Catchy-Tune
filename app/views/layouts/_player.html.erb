<% @css_sources << 'player'
   @js_sources << 'player' %>

<audio id="player" src=""></audio>
<div class="navbar navbar-fixed-bottom">
  <div class="navbar-inner">
    <div id="playerholder" class="container">
      <div class="span4">
        <div class="btn-group">
          <a href="#" id="play" class="btn">play</a>
          <a href="#" id="next" class="btn">next</a>
          <a href="#" id="volumeup" class="btn">+</a>
          <a href="#" id="volumedown" class="btn">-</a>
        </div>
      </div>
      <div class="span7">
        <div class="progress progress-striped">
          <div id="playprogressbar" class="bar" style="width: 0%;"></div>
        </div>
        <div id="currentinfo"><%= render partial: 'playlist/showcurrentsong' %></div>
      </div>
    </div>
  </div>
</div>