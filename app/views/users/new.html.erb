<% @page_title = "UserAuth | Signup" %>
<div class="container">
  <div class="row">
    <div class="span6">
      <p>
        Lorem ipsum dolor sit amet, consectetur adipisicing elit. Cumque debitis deleniti,
        dolor dolore est eum hic illo, iusto labore laborum, praesentium quaerat quisquam rerum
        unde voluptas voluptatem voluptatibus. Quisquam, saepe?
      </p>
    </div>
    <div class="span6">
      <%= form_for(:user, :url => {:controller => 'users', :action => 'new'}, :html => {:class => 'form-signin form-horizontal'}) do |f| %>
        <div class="control-group">
          <%= label :user, :username, 'Username:', :class => 'control-label' %>

          <div class="controls">
            <%= f.text_field :username, :placeholder => 'User' %>
          </div>
        </div>
        <div class="control-group">
          <%= label :user, :password, 'Password:', :class => 'control-label' %>

          <div class="controls">
            <%= f.password_field :password, :placeholder => 'Password' %>
          </div>
        </div>
        <div class="control-group">
          <%= label :user, :password_confirmation, 'Confirm password:', :class => 'control-label' %>

          <div class="controls">
            <%= f.password_field :password_confirmation, :placeholder => 'Password' %>
          </div>
        </div>

        <div class="control-group">
          <div class="controls">
            <% if @user.errors.any? %>
              <ul class="Signup_Errors">
                <% for message_error in @user.errors.full_messages %>
                  <li class="text-error"><%= message_error %></li>
                <% end %>
              </ul>
            <% end %>

            <%= f.submit value='Sign up', :class => 'btn btn-large btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>