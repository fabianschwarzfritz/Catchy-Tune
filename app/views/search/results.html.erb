<% @page_title = "Search results for \"#{@query}\""
   @css_sources = 'search'
   @js_sources = 'search' -%>

<h1>Search for &quot;<%= @query %>&quot;</h1>
<h5>Found <%= @artists_count %> artists and <%= @tracks_count %> tracks.</h5>

<div class="container">
  <% @results.each do |result| %>
      <div class="row">
        <div class="container">
          <% case result %>
          <% when Track %>
              <div class="span5"><p><%= result.name %></p></div>
              <div class="span5"><p><%= Artist.find_by_id(result.artist_id).name %></p></div>
          <% when Artist%>
              <p><%= result.name %></p>
          <% else %>
              <p class="text-error"><%= result.class %></p>
          <% end %>
        </div>
      </div>
  <% end %>
</div>
