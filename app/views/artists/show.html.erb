<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @artist.name %>
</p>

<div class="control-group">
  <div class="controls">
    <%= link_to 'Back', :back, :class => 'btn btn-primary' %>

    <% if @artist.user == @current_user %>
        <%= link_to 'Edit', edit_artist_path(@artist), :class => 'btn btn-inverse' %>
        <%= link_to 'Delete', artist_path(@artist), :method => :delete, :class => 'btn btn-danger' %>
    <% end %>
  </div>
</div>
